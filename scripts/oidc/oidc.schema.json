{
  "type": "object",
  "properties": {
    "federatedCredentials": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "subject": {
            "type": "string",
            "pattern": "^(repo:\\${REPO}:).*$",
            "description": "The pattern to use for the federated credential subject. Must start with 'repo:${REPO}:'."
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "subject",
          "description"
        ]
      }
    },
    "roleAssignments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "scope": {
            "type": "string",
            "pattern": "^(/subscriptions/\\${SUBSCRIPTION_ID}).*$",
            "description": "The scope to create the role assignment at. Must start with '/subscriptions/${SUBSCRIPTION_ID}'."
          },
          "role": {
            "type": "string"
          }
        },
        "required": [
          "scope",
          "role"
        ]
      }
    }
  },
  "required": [
    "federatedCredentials",
    "roleAssignments"
  ]
}